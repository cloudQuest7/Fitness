<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>Meditation Player - Fitra</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <style>
        body {
            background: #000;
            margin: 0;
            overflow: hidden;
        }

        .video-background {
            position: fixed;
            right: 0;
            bottom: 0;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -1;
            filter: brightness(0.5);
            object-fit: cover;
        }

        .play-pause-btn {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .play-pause-btn::before {
            content: '';
            position: absolute;
            inset: -2px;
            background: linear-gradient(45deg, #00aeff, #a068ff);
            border-radius: 50%;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .play-pause-btn:hover::before {
            opacity: 1;
        }

        .play-pause-btn i {
            position: relative;
            z-index: 1;
            font-size: 1.8rem;
            transition: all 0.3s ease;
        }

        .play-pause-btn:hover i {
            transform: scale(1.1);
        }

        .control-btn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
        }

        .control-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: scale(1.1);
        }

        .progress-container {
            width: 60%;
            max-width: 600px;
            height: 4px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 2px;
            cursor: pointer;
            position: relative;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, #00aeff, #a068ff);
            border-radius: 2px;
            transition: width 0.1s linear;
        }

        .meditation-title {
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
        }

        .meditation-overlay {
            position: fixed;
            inset: 0;
            background: linear-gradient(to bottom,
                rgba(0,0,0,0.7) 0%,
                rgba(0,0,0,0.3) 50%,
                rgba(0,0,0,0.7) 100%);
            z-index: 0;
        }

        .content-wrapper {
            position: relative;
            z-index: 1;
        }

        .controls-wrapper {
            backdrop-filter: blur(8px);
            background: rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 1rem;
        }

        .control-btn {
            transition: all 0.3s ease;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .control-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: scale(1.1);
        }

        .play-btn {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.15);
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .play-btn:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: scale(1.1);
        }
    </style>
</head>
<body class="min-h-screen bg-black">
    <!-- Video Background with Fallback -->
    <video autoplay muted loop class="video-background" id="meditation-video" poster="/images/meditation/<%= category.toLowerCase() %>.jpg">
        <source src="/videos/meditation/<%= category.toLowerCase() %>.mp4" type="video/mp4">
    </video>
    
    <div class="meditation-overlay"></div>

    <!-- Content -->
    <div class="content-wrapper min-h-screen flex items-center justify-center">
        <!-- Back Button -->
        <a href="/meditation" class="absolute top-8 left-8 text-white/80 hover:text-white transition-colors">
            <i class="fas fa-arrow-left text-2xl"></i>
        </a>

        <!-- Title -->
        <h1 class="meditation-title text-4xl md:text-6xl font-bold mb-12 text-center">
            <%= category %> Meditation
        </h1>

        <!-- Time and Session Info -->
        <!-- <div class="text-center mb-16">
            <p class="text-xl text-white/90"><%= duration %></p>
            <p class="text-white/70">Session <%= currentSession %> of <%= totalSessions %></p>
        </div> -->

        <!-- Progress Bar -->
        <div class="progress-container mb-8">
            <div class="progress-bar" style="width: 0%"></div>
        </div>

        <!-- Time Display -->
        <div class="w-60 flex justify-between text-sm mb-12">
            <span id="current-time">0:00</span>
            <span id="duration">15:00</span>
        </div>

        <!-- Controls -->
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="controls-wrapper flex items-center gap-8">
                <button class="control-btn text-white/80 hover:text-white" id="prev-track">
                    <i class="fas fa-step-backward text-2xl"></i>
                </button>
                
                <button class="play-btn text-white/90 hover:text-white transition-all" id="play-pause">
                    <i class="fas fa-play text-3xl"></i>
                </button>
                
                <button class="control-btn text-white/80 hover:text-white" id="next-track">
                    <i class="fas fa-step-forward text-2xl"></i>
                </button>
            </div>
        </div>
    </div>

    <script>
        // Pass category to JavaScript
        const category = '<%= category %>';
    </script>
    <script src="/js/meditationPlayer.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            new MeditationPlayer();
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const video = document.getElementById('meditation-video');
            const playPauseBtn = document.getElementById('play-pause');
            const playPauseIcon = playPauseBtn.querySelector('i');
            let isPlaying = false;

            playPauseBtn.addEventListener('click', () => {
                isPlaying = !isPlaying;
                if (isPlaying) {
                    video.play();
                    playPauseIcon.classList.replace('fa-play', 'fa-pause');
                } else {
                    video.pause();
                    playPauseIcon.classList.replace('fa-pause', 'fa-play');
                }
            });
        });
    </script>
</body>
</html>